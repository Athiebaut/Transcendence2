{
  "name": "transcendence-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json && prisma generate",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "web:build": "npm --prefix /web ci && npm --prefix /web run build",
    "web:watch": "esbuild ../web/main.ts --bundle --outfile=../web/dist/main.js --platform=browser --format=esm --target=es2020 --watch"

  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@prisma/client": "^5.18.0",
    "argon2": "^0.41.1",
    "fastify": "^4.29.1",
    "jose": "^5.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "esbuild": "^0.25.9",
    "prisma": "^5.18.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
